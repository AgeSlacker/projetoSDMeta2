<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="webserver" extends="struts-default">
        <interceptors>
            <interceptor name="requireLogin" class="webserver.inerceptors.LoginInterceptor"></interceptor>
        </interceptors>
        <default-action-ref name="index" />
        <action name="index">
            <result>/index.jsp</result>
        </action>
        <action name="searchResults" class="webserver.action.SearchAction">
            <result name="success">/searchResults.jsp</result>
            <result name="error">/index.jsp</result>
            <result name="login">/Login.html</result>
        </action>
    </package>
</struts>